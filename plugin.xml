<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.cordova.plugin.MyStuff" version="0.0.1">
    <name>MyStuff</name>

    <description>An Android Cordova plugin</description>
    <license>Moxie</license>

    <keywords>cordova,android,toast,message,alert</keywords>
	
    <engines>
        <engine name="cordova-android" version=">=8.1.0" />
        <engine name="cordova-ios" version=">=5.1.1" />
    </engines>
	
    <js-module name="DeviceInfoPlugin" src="www/DeviceInfoPlugin.js">
    	<clobbers target="DeviceInfoPlugin" />
    </js-module>
  
    <platform name="android">	 		    
    	<source-file src="src/android/DeviceInfoPlugin.java" target-dir="src/com/cordova/plugin/DeviceInfoPlugin" />

	<config-file target="res/xml/config.xml" parent="/*">
		<feature name="DeviceInfoPlugin">
		    <param name="android-package" value="com.cordova.plugin.DeviceInfoPlugin"/>	
		</feature>
	</config-file>	
	    
	<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
	<lib-file src="library/device-info_1.0.aar" target="libs/device-info_1.0.aar" />	
	   
    </platform>
</plugin>
